datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id                Int       @id @default(autoincrement())
  name              String
  email             String    @unique
  password          String
  role              Role
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  acceptedOrders    Order[]
  enteredResults    OrderTestParameter[]
}

model Patient {
  id             Int       @id @default(autoincrement())
  firstName      String
  lastName       String
  fatherName     String
  birthDate      DateTime
  phone          String?
  email          String?
  address        String?
  gender         String?
  identityNumber String?
  passportNumber String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  orders         Order[]
}

model Test {
  id          Int              @id @default(autoincrement())
  code        String           @unique
  name        String
  category    TestCategory
  price       Float
  sampleType  String
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  orderTests  OrderTest[]
  parameters  TestParameter[]
}

model TestParameter {
  id                Int                        @id @default(autoincrement())
  code              String                     @unique
  name              String
  unit              String?
  referenceRange    String?                    // Genel referans aralığı (geriye dönük uyumluluk için)
  createdAt         DateTime                   @default(now())
  updatedAt         DateTime                   @updatedAt
  tests             Test[]
  orderTestParameters OrderTestParameter[]
  referenceRanges   ParameterReferenceRange[]
}

model ParameterReferenceRange {
  id              Int            @id @default(autoincrement())
  testParameterId Int
  ageGroup        AgeGroup
  gender          Gender
  rangeText       String?         // Metin formatında aralık (örn: "70-100", "<200", "Negatif")
  minValue        Float?          // Minimum sayısal değer
  maxValue        Float?          // Maksimum sayısal değer
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  testParameter   TestParameter   @relation(fields: [testParameterId], references: [id], onDelete: Cascade)

  @@unique([testParameterId, ageGroup, gender])
  @@index([testParameterId])
}

enum AgeGroup {
  CHILD      // 0-18 yaş
  ADULT      // 18-65 yaş
  ELDERLY    // 65+ yaş
}

enum Gender {
  MALE
  FEMALE
  BOTH       // Her iki cinsiyet için de aynı
}

enum TestCategory {
  BIO
  HEM
  URI
  HOR
  COA
  PCR
  A1C
  ESR
  SER
  IMM
  MIC
  VIT
  TOX
  KAN
  KOA
  OTHER
}

model Order {
  id           Int           @id @default(autoincrement())
  patientId    Int
  tests        OrderTest[]
  total        Float
  barcode      String?       @unique
  sampleStatus SampleStatus  @default(PENDING)
  acceptedAt   DateTime?
  acceptedBy   Int?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  patient      Patient       @relation(fields: [patientId], references: [id], onDelete: Cascade)
  acceptedByUser User?       @relation(fields: [acceptedBy], references: [id])
}

enum SampleStatus {
  PENDING
  ACCEPTED
  IN_PROGRESS
  COMPLETED
  REJECTED
}

model OrderTest {
  id         Int                  @id @default(autoincrement())
  orderId    Int
  testId     Int
  order      Order                @relation(fields: [orderId], references: [id], onDelete: Cascade)
  test       Test                 @relation(fields: [testId], references: [id], onDelete: Cascade)
  parameters OrderTestParameter[]
}

model OrderTestParameter {
  id              Int          @id @default(autoincrement())
  orderTestId     Int
  testParameterId Int
  result          String?
  status          ResultStatus @default(PENDING)
  enteredAt       DateTime?
  enteredBy       Int?
  orderTest       OrderTest    @relation(fields: [orderTestId], references: [id], onDelete: Cascade)
  testParameter   TestParameter @relation(fields: [testParameterId], references: [id], onDelete: Cascade)
  enteredByUser   User?        @relation(fields: [enteredBy], references: [id])

  @@unique([orderTestId, testParameterId])
}

enum ResultStatus {
  PENDING
  ENTERED
  VERIFIED
  REJECTED
}

enum Role {
  ADMIN
  RECEPTION
  LAB
}

